<div class="nested-form-wrapper">
  <div>
    <label class="block text-sm font-medium text-graphite">
      Metrics
    </label>
    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 px-6 pb-6 border-2 border-[#303e7b] border-dashed rounded-md">

      <div class="sm:col-span-3 mt-3">
        <label class="text-indigo mb-3">Name</label>
        <input type="text" name="metric_name[]" value="<% %>" class="js-start-time%> w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-indigo outline-none focus:border-[#6A64F1] focus:shadow-md" />
      </div>

      <div class="sm:col-span-3 mt-3">
        <label class="text-indigo mb-3">Deduction</label>
        <input type="number" name="deduction[]" value="<% %>" class="js-start-time%> w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-indigo outline-none focus:border-[#6A64F1] focus:shadow-md" />
      </div>

      <div class="col-span-full">
        <label class="text-indigo mb-3">Content</label>
        <textarea class="w-full rounded-lg border-gray-200 p-3 text-sm text-indigo" placeholder="Enter custom content here..." rows="8" id="message" name="content[]"></textarea>
      </div>


      <div class="">
        <button type="button" class="bg-[#303e7b] rounded-md p-2 inline-flex items-center justify-center text-white hover:text-white hover:bg-graphite focus:outline-none focus:ring-2 focus:ring-inset focus:ring-stone" data-action="nested-form#remove">
          <span class="sr-only">Close menu</span>
          <!-- Heroicon name: outline/x -->
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          <span class="ml-4">Remove</span>
        </button>
      </div>
    </div>
  </div>
</div>



