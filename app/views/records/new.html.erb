<!-- app/views/chats/new.html.erb -->
<h1>Chat with the AI</h1>

<%= form_with model: @record, method: :post, remote: true do |form| %>
  <%= form.hidden_field :uuid, value: @uuid %>
  <div class="group">
    <%= form.file_field :file, class: "" %>
  </div>

  <%= form.submit %>
<% end %>

<% if local_assigns[:response].present? %>
  <div id="response">
    <div><strong>groq response:</strong> <%= response %></div>
  </div>
<% end %>