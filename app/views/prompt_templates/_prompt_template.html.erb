<% cache prompt_template do %>
<tr class="bg-white transition-all duration-500 hover:bg-gray-50">
  <td class="p-5 whitespace-nowrap text-sm leading-6 font-medium text-gray-900">
    <%= prompt_template.task.truncate(50) %>
  </td>
  <td class="p-5 whitespace-nowrap text-sm leading-6 font-medium text-gray-900">
    <%= prompt_template.format.to_plain_text.truncate(50) %>
  </td>
  <td class="p-5 whitespace-nowrap text-sm leading-6 font-medium text-gray-900"><%= time_tag prompt_template.created_at, "data-local": "time-ago" %></td>
  <td class="p-5">
    <div class="flex items-center gap-1">
      <%= link_to edit_prompt_template_path(prompt_template) do %>
        <button class="p-2 rounded-full group transition-all duration-500 flex item-center">
          <%= image_tag "write.svg" %>
        </button>
      <%end %>
      <%= link_to prompt_template, data: { turbo_method: :delete, "turbo_confirm": "Are you sure?" } do %>
        <button class="p-2 rounded-full group transition-all duration-500 flex item-center">
          <%= image_tag "trash.svg" %>
        </button>
      <% end %>
    </div>
  </td>
</tr>
<% end %>